radio.onReceivedNumber(function (receivedNumber) {
    radio.receivedPacket(receivedNumber)
    serialNumber = radio.receivedPacket(RadioPacketProperty.SerialNumber)
    player_index = players.indexOf(serialNumber)
    // reemplaza el 0 de la siguiente linea por el numero serial de uno de tus compañeros
    if (serialNumber == 0) {
        if (player_index < 0) {
            players.unshift(serialNumber)
            array.unshift(receivedNumber)
        } else {
            array.set(player_index, receivedNumber)
        }
    }
    // reemplaza el 0 de la siguiente linea por el numero serial de uno de tus compañeros
    if (serialNumber == 0) {
        if (player_index < 0) {
            players.unshift(serialNumber)
            array.unshift(receivedNumber)
        } else {
            array.set(player_index, receivedNumber)
        }
    }
    if (array.length == 2) {
        // mi_temperatura es el valor de temperatura sensado por tu microbit
        mi_temperatura = input.temperature()
        // temperatura_dispositivo_1 es el valor de temperatura sensado por un microbit de tu grupo
        temperatura_dispositivo_1 = array.get(0)
        // temperatura_dispositivo_1 es el valor de temperatura sensado por un microbit de tu grupo
        temperatura_dispositivo_2 = array.get(1)
        // Reemplaza el 0 de la siguiente línea por la operación de calculo de la temperatura promedio de tu grupo.
        average = 0
        average = Math.trunc(average)
        basic.showNumber(average)
    }
})
input.onButtonPressed(Button.A, function () {
    temp = input.temperature()
    basic.showString("L")
    basic.showNumber(temp)
})
let temp = 0
let average = 0
let temperatura_dispositivo_1 = 0
let temperatura_dispositivo_2 = 0
let mi_temperatura = 0
let serialNumber = 0
let player_index = 0
// este array contendra la lectura de temperatura
// de los microbit de tus companeros
let array: number[] = []
let players: number[] = []
radio.setGroup(2)
radio.setTransmitSerialNumber(true)
radio.setTransmitPower(6)
basic.forever(function () {
    temp = input.temperature()
    radio.sendNumber(temp)
}) 
